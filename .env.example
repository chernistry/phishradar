# FastAPI
API_HOST=0.0.0.0
API_PORT=8000
ENV=dev
LOG_LEVEL=INFO

# Embeddings (Ollama)
EMBED_PROVIDER=ollama            # ollama|remote
EMBED_MODEL_NAME=embeddinggemma:latest
OLLAMA_BASE_URL=http://localhost:11434
REMOTE_EMBED_API_KEY=

# Qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=phishradar_urls

# Redis
REDIS_URL=redis://redis:6379/0

# Slack
SLACK_BOT_TOKEN=xoxb-***
SLACK_SIGNING_SECRET=***
SLACK_CHANNEL_ID=***
SLACK_APPROVERS_GROUP_ID=

# BigQuery
GCP_PROJECT_ID=your-gcp-project
BQ_DATASET=pradar
GOOGLE_APPLICATION_CREDENTIALS=/app/sa.json  # optional if outside GCE

# Dedup/limits
DEDUP_THRESHOLD=0.12
RATE_LIMIT_FEEDS_PER_HOST=2
RATE_LIMIT_SLACK_RPS=1

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=
PROMETHEUS_PORT=9000

